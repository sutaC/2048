<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoardField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">50dp</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/empty</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="controllerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">65dp</item>
        <item name="android:height">65dp</item>
        <item name="android:backgroundTint">#009688</item>
        <item name="android:enabled">false</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:icon">@android:drawable/ic_media_play</item>
    </style>
</resources>